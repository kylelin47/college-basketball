<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="6dp">

    <TextView
        android:layout_width="0dip"
        android:layout_weight="1"
        android:layout_height="match_parent"
        android:id="@+id/textViewRank"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="15sp"
        android:textStyle="bold"
        android:text="#1"
        android:gravity="center_vertical|center_horizontal" />

    <RelativeLayout
        android:layout_width="0dip"
        android:layout_weight="10"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="SF"
            android:textColor="#999"
            android:textSize="16sp"
            android:textStyle="bold"
            android:id="@+id/textViewPosition"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Lebron James [Sr]"
            android:textSize="16sp"
            android:textStyle="bold"
            android:id="@+id/textViewName"
            android:layout_alignParentTop="true"
            android:layout_marginStart="15dp"
            android:layout_marginLeft="15dp"
            android:layout_toRightOf="@+id/textViewPosition"
            android:layout_toEndOf="@+id/textViewPosition" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="#1 Ohio State Orangutans (36-0)"
            android:textSize="15sp"
            android:textStyle="italic"
            android:id="@+id/textViewTeamName"
            android:layout_below="@+id/textViewPosition"
            android:layout_marginStart="5dp"
            android:layout_marginLeft="5dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text=""
            android:textColor="#000"
            android:textSize="13sp"
            android:textStyle="italic"
            android:id="@+id/textViewTotalLabel"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="1146"
            android:textColor="#000"
            android:textSize="20sp"
            android:textStyle="bold"
            android:id="@+id/textViewTotal"
            android:layout_alignParentTop="true"
            android:layout_toStartOf="@+id/textViewTotalLabel"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text=" PG"
            android:textColor="#000"
            android:textSize="13sp"
            android:textStyle="italic"
            android:id="@+id/textViewPerGameLabel"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="22.6"
            android:textColor="#000"
            android:textSize="15sp"
            android:textStyle="bold"
            android:id="@+id/textViewPerGame"
            android:layout_below="@+id/textViewTotal"
            android:layout_toStartOf="@+id/textViewPerGameLabel" />

    </RelativeLayout>

</LinearLayout>
